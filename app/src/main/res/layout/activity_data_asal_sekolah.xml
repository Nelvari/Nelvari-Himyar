<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataAsalSekolah">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <androidx.appcompat.widget.Toolbar
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/toolbar"
           android:background="@mipmap/capture2"
           android:theme="@style/ActionBarThemeOverlay">

       </androidx.appcompat.widget.Toolbar>

       <androidx.cardview.widget.CardView
           android:layout_marginTop="30dp"
           android:layout_marginHorizontal="10sp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:background="@drawable/shaperectangle"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:gravity="center">

               <EditText
                   android:layout_marginHorizontal="20dp"
                   android:id="@+id/namaSekolah"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:inputType="text"
                   android:textSize="15dp"
                   android:hint="Nama sekolah *"/>

               <EditText
                   android:layout_marginHorizontal="20dp"
                   android:id="@+id/alamatSekolah"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:inputType="text"
                   android:textSize="15dp"
                   android:hint="Alamat sekolah*"/>

           </LinearLayout>

           <LinearLayout
               android:layout_marginHorizontal="20dp"
               android:layout_marginTop="50sp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center">



           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="10sp">

           <LinearLayout
               android:background="@drawable/shaperectangle"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:gravity="center">

               <TextView
                   android:layout_marginHorizontal="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="STTB/Ijazah/Surat Tenda Kelulusan/Surat Tanda Lulus"
                   android:textSize="15dp"
                   android:textStyle="bold"
                   android:layout_marginTop="10dp"/>

               <EditText
                   android:layout_marginTop="10dp"
                   android:layout_marginHorizontal="20dp"
                   android:id="@+id/tahunSTTB"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:inputType="numberDecimal"
                   android:textSize="15dp"
                   android:hint="Tahun"/>

               <EditText
                   android:layout_marginHorizontal="20dp"
                   android:id="@+id/noSTTB"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:inputType="numberDecimal"
                   android:textSize="15dp"
                   android:hint="Nomor"/>

               <EditText
                   android:layout_marginHorizontal="20dp"
                   android:id="@+id/nilaiSTTb"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:inputType="numberDecimal"
                   android:textSize="15dp"
                   android:hint="Nilai"/>

           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <Button
           android:id="@+id/btnSav"
           android:layout_marginHorizontal="20sp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="75dp"
           android:layout_marginBottom="20sp"
           android:background="@drawable/button"
           android:text="Simpan"
           android:textStyle="bold"
           android:textColor="@android:color/white"/>

   </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="389dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/inbox_back">

            <View
                android:layout_width="@dimen/activityPadding2"
                android:layout_height="@dimen/placeholderImage"
                android:background="@drawable/plchldr" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/txttitle"
                android:layout_width="@dimen/placeholderImage"
                android:layout_height="@dimen/activityPadding"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/padding_10"/>

            <TextView
                android:id="@+id/txtisi"
                android:layout_width="@dimen/placeholderTextHeight"
                android:layout_height="@dimen/activityPadding"
                android:background="@color/background"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/padding_10"/>

            <TextView
                android:id="@+id/txttype"
                android:layout_width="@dimen/placeholderImage"
                android:layout_height="@dimen/activityPadding"
                android:layout_marginTop="45dp"
                android:background="@color/background"
                android:layout_marginLeft="@dimen/padding_10"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
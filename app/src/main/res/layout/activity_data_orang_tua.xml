<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Ui.DataOrangTua">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar

            android:theme="@style/ActionBarThemeOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarOrangTua">

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Data Orang Tua"
                android:layout_marginBottom="30dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@drawable/shaperectangle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama *"
                        android:textSize="15dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_marginHorizontal="20dp"
                        android:id="@+id/namaAyah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:hint="Ayah"/>

                    <EditText
                        android:layout_marginHorizontal="20dp"
                        android:id="@+id/namaIbu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:hint="ibu"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <LinearLayout
                    android:background="@drawable/shaperectangle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <EditText
                        android:layout_marginHorizontal="20dp"
                        android:id="@+id/alamatOrangTua"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:hint="Alamat (Lengkap) *"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <LinearLayout
                    android:background="@drawable/shaperectangle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pekerjaan *"
                        android:textSize="15dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_marginHorizontal="20dp"
                        android:id="@+id/pekerjaanAyah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:hint="Ayah"/>

                    <EditText
                        android:layout_marginHorizontal="20dp"
                        android:id="@+id/pekerjaanIbu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:hint="ibu"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <LinearLayout
                    android:background="@drawable/shaperectangle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Penghasilan"
                        android:textSize="15dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_marginHorizontal="20dp"
                        android:id="@+id/penghasilanAyah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="15dp"
                        android:hint="Ayah"/>

                    <EditText
                        android:layout_marginHorizontal="20dp"
                        android:id="@+id/penghasilanIbu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="15dp"
                        android:hint="ibu"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shaperectangle"
                    android:gravity="center">

                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nomor Telepon/HP *"
                        android:textSize="15dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_marginHorizontal="20dp"
                        android:id="@+id/noAyah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="15dp"
                        android:hint="Ayah"/>

                    <EditText
                        android:layout_marginHorizontal="20dp"
                        android:id="@+id/noIbu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="15dp"
                        android:hint="ibu"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Data Wali Murid"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:background="@drawable/shaperectangle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <EditText
                        android:layout_marginHorizontal="20dp"
                        android:id="@+id/namaWali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:hint="Nama Wali"/>

                    <EditText
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/alamatWali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:hint="Alamat Wali (Lengkap)"/>

                    <EditText
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/noWali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="15dp"
                        android:hint="No HP aktif"/>

                    <EditText
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/pekerjaanWali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="15dp"
                        android:hint="Pekerjaan Wali"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnSimpanOrangTua"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50sp"
                android:layout_marginBottom="50sp"
                android:background="@drawable/button"
                android:text="NEXT"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
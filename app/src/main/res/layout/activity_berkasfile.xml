<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Berkasfile"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="@color/hitam"
        android:text="Pilih file untuk melengkapi syarat pendaftaran"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/hitam"
        android:text="1.pass foto 3x4"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/hitam"
        android:layout_marginLeft="40dp"
        android:text="2.Akte dalam bentuk gambar"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/hitam"
        android:layout_marginLeft="40dp"
        android:text="3.KK dlalam bentuk gambar"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/hitam"
        android:layout_marginLeft="40dp"
        android:text="4.Prestasi yang pernah dicapai  jika ada"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/hitam"
        android:layout_marginLeft="40dp"
        android:text="5. FC nilai raport dalam bentuk gambar"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/hitam"
        android:layout_marginLeft="40dp"
        android:text="6.Riwayat kesehatan dalam bentuk gambar"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/hitam"
        android:layout_marginLeft="40dp"
        android:text="7.Sertakan gambar buatan anda dalam bentuk gambar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnfotosisiwa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/putih"
            android:layout_marginLeft="25dp"
            android:text="Foto"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivfotodiri"
                android:layout_width="115dp"
                android:layout_height="130dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Foto.jpg" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnakte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/putih"
            android:layout_marginTop="40dp"
            android:text="akte" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivakte"
                android:layout_width="115dp"
                android:layout_height="130dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Akte.jpg" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnkk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/putih"
            android:layout_marginLeft="25dp"
            android:text="KK"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivkk"
                android:layout_width="115dp"
                android:layout_height="130dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="KK.jpg" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnsertifikat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/putih"
            android:layout_marginLeft="25dp"
            android:text="Srtfkt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivsertifikat"
                android:layout_width="115dp"
                android:layout_height="130dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Sertifikat.jpg" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnraport"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/putih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:text="Raport"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivraport"
                android:layout_width="115dp"
                android:layout_height="130dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Nilai.jpg" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnksehtan"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/putih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:text="ksehtan"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivksehtan"
                android:layout_width="115dp"
                android:layout_height="130dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="kesehatan.jpg" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btngambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textColor="@color/putih"
            android:background="@color/colorPrimaryDark"
            android:layout_marginLeft="25dp"
            android:text="gambar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivgambar"
                android:layout_width="115dp"
                android:layout_height="130dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Capture.jpg" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnSaf"
        android:layout_marginHorizontal="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/button"
        android:text="NEXT"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

</LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkg"
    tools:context=".animasi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/anim">

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="169dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/anima"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="TENTANG :"
                android:textColor="@color/hitam" />

            <TextView
                android:layout_width="285dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:text="Animasi merupakan suatu Teknik
menampilkan gambar berurut
sedemikian rupa sehingga penonton
merasakan adanya ilusi gerakan
(motion) pada gambar yang
ditampilkan. "
                android:textColor="@color/hitam" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/anima"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Secara umum ilusi gerakan
merupakan perubahan yang dideteksi
secara visual oleh mata penonton
sehingga tidak harus perubahan yang
terjadi merupakan perubahan posisi
sebagai makna dari istilah 'gerakan'."
                android:textColor="@color/hitam" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="214dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/anima"
            android:orientation="vertical"
            android:textColor="@color/hitam">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="PERSYARATAN PENDAFTAR"
                android:textColor="@color/hitam" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="1.Foto Copy Nilai Raport Semester 5/nilai UN."
                android:textColor="@color/hitam" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="2.Akta Kelahiran."
                android:textColor="@color/hitam" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="3.Kartu Keluarga (KK)."
                android:textColor="@color/hitam" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="4.Riwayat Kesehatan"
                android:textColor="@color/hitam" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="5.Pas Foto 3x5. "
                android:textColor="@color/hitam" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="6.Sertakan 1 contoh gambar ilustrasi buatan anda."
                android:textColor="@color/hitam" />

        </LinearLayout>

        <Button
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@color/anim"
            android:text="LOGIN SEKARANG"
            android:textColor="@color/putih"/>





    </LinearLayout>



</ScrollView>
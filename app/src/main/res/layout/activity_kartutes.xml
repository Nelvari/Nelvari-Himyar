<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ui.Kartutes"
        android:background="@color/putih"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_satu"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"/>

        <LinearLayout
            android:layout_width="342dp"
            android:layout_height="589dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:background="@drawable/line1"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="145dp"
                android:layout_height="185dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@mipmap/fto" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Tes              :   64/SMKRUS/PPDB/2020"
                android:layout_marginTop="50dp"
                android:textColor="@color/hitam"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama                        :   Montserrat"
                android:textColor="@color/hitam"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Asal Sekolah           :   SMP Times Now Roman"
                android:textColor="@color/hitam"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pilihan Jurusan       :   Rekayasa Perangkat Lunak"
                android:textColor="@color/hitam"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tahun Ajaran          :   2020/2021"
                android:textColor="@color/hitam"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lokasi Tes               :   Ruang Kelas RPL"
                android:textColor="@color/hitam"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nb : Wajib dibawa selama seleksi tes berlangsung"
                android:gravity="center"
                android:layout_marginTop="80dp"/>
        </LinearLayout>

        <Button
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="@color/colorAccent"
            android:text="Download file"
            android:textColor="@color/putih" />


    </LinearLayout>

</ScrollView>